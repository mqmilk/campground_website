<% layout("layouts/boilerplate") %>
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card shadow">
                <div class="card-body">
            <h1 class="text-center">Edit Campground</h1>
            <form class="form-group form-validation" method="post"
                action="/campgrounds/<%= campground._id %>?_method=put" novalidate  enctype="multipart/form-data">
                <div class="mb-3">
                    <label class="form-label" for="title">Title:</label>
                    <input class="form-control" type="text" id="title" name="title" value="<%= campground.title %>"
                        placeholder="<%= campground.title %>" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="title">Location:</label>
                    <input class="form-control" type="text" id="location" name="location"
                        value="<%= campground.location %>" placeholder="<%= campground.location %>" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="price">Price:</label>
                    <div class="input-group mb-3">
                        <span class="input-group-text">$</span>
                        <input type="text" id="price" name="price" class="form-control" value="<%= campground.price %>"
                            placeholder="<%= campground.price %>" aria-label="Amount (to the nearest dollar)" required>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="description">Description:</label>
                    <input type="text" class="form-control" type="text" id="description" name="description"
                        value="<%= campground.description %>" placeholder="<%= campground.description %>" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="image">Add Image:</label>
                    <input class="form-control"  type="file" name="image" id="image" multiple />
                </div>
                <div>
                    <%  campground.image.forEach((img, i) => { %>  
                    <div class="col-3 d-inline-flex mx-5">                     
                        <img src="\uploads\<%= img.filename %>" class="img-thumbnail" alt="">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="img-<%= i %>" name="deleteImages[]" value="<%= img.filename %>">
                            <label class="form-check-label" for="img-<%= i %>">Delete Image?</label>
                        </div>    
                     </div>                 
                    <% }) %>
                </div>
                <div class="d-grid gap-2">
                    <button class="btn btn-success">Update Campground</button>                                
                </div>               
            </form>
        </div>
    </div>
        </div>
        <a href="/campgrounds/<%= campground._id %>">Back</a>
    </div>